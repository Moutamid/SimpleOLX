<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:drawableStart="@drawable/baseline_arrow_back_ios_new_24"
        android:fontFamily="@font/texta_bold"
        android:onClick="backPress"
        android:text="   Ads"
        android:textColor="@color/black"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_"
        android:elevation="5dp"

        >

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="53dp"
            android:layout_marginRight="73dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/edit_bg"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/baseline_youtube_searched_for_24"
            android:fontFamily="@font/texta_medium"
            android:hint="  Search for Ads"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="#A89A9A"

            android:textSize="14dp" />

        <ImageView
            android:id="@+id/filter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/baseline_filter_list_24" />


        <ImageView
            android:id="@+id/mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="77dp"
            android:layout_marginRight="37dp"
            android:layout_marginBottom="37dp"
            android:src="@drawable/baseline_mic_24" />
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ad_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>