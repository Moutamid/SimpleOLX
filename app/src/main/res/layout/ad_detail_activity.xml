<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/primary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary">

                <ImageView
                    android:id="@+id/backpress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onBack"
                    android:src="@drawable/baseline_arrow_back_ios_new_24"
                    app:tint="@color/white" />


                <RelativeLayout
                    android:id="@+id/fvt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"

                    >

                    ]

                    <ImageView
                        android:id="@+id/favourite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_favorite_border_24"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/unfavourite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_favorite_24"
                        android:visibility="gone"
                        app:tint="@color/white" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:layout_toStartOf="@+id/fvt"
                    android:src="@drawable/baseline_call_24"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/ad_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="25dp"
                    android:maxLines="1"
                    android:paddingLeft="6dp"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@color/black"
                android:layout_marginTop="63dp" />


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="210dp"
                android:layout_marginRight="45dp"
                android:elevation="8dp"
                android:shadowColor="@color/black"
                android:shadowRadius="2"
                android:text="Atlantis Paradise Island, Bahamas"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/texta_heavy"/>


            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewPager"
                android:visibility="gone"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/texta_heavy"
                    android:text="Category"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/ad_detail_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/texta_medium"
                    android:text="Atlantis Paradise Island, Bahamas"
                    android:textColor="#000"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay1"
                android:layout_marginTop="10dp"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/texta_heavy"
                    android:text="Company"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/company_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/texta_medium"
                    android:text="Atlantis Paradise Island, Bahamas"
                    android:textColor="#000"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay2"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/texta_heavy"
                    android:text="Hosted By"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/host_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/texta_medium"
                    android:text="Atlantis Paradise Island, Bahamas"
                    android:textColor="#000"
                    android:textSize="17dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/lay4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/texta_heavy"
                android:text="Discription"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ad_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay4"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:textAlignment="gravity"
                android:layout_marginBottom="15dp"
                android:text="testing"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </RelativeLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/btn_message"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bg"
                android:fontFamily="@font/texta_bold"
                android:gravity="center"
                android:text="Message"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/btn_whatsapp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:backgroundTint="@color/secondary"
                android:fontFamily="@font/texta_bold"
                android:gravity="center"
                android:text="WhatsApp"
                android:textColor="@color/white"
                android:textSize="17dp" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
