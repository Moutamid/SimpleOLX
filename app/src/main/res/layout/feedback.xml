<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"

    app:cardCornerRadius="12dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/texta_bold"
                android:gravity="center"
                android:text="Send your Message"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/texta_medium"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_bg"
                android:fontFamily="@font/texta_medium"
                android:hint="Email"
                android:padding="10dp"
                android:textColorHint="#C3BDBD"

                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/texta_medium"
                android:text="Message"
                android:textColor="@color/black"

                android:textSize="16dp" />

            <EditText
                android:id="@+id/editTextMessage"
                android:layout_width="match_parent"

                android:layout_height="140dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"

                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_bg"
                android:fontFamily="@font/texta_medium"
                android:gravity="top"
                android:hint="Please type your message here"
                android:padding="8dp"
                android:textColorHint="#C3BDBD" />

            <TextView
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="24dp"

                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/texta_bold"
                android:gravity="center"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="23dp" />


        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView><!--<?xml version="1.0" encoding="utf-8"?>-->
