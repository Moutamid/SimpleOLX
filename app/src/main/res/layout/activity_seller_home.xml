<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_icon_badge" />

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Welcome seller!"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/stepping_up" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Your dashboard"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All your tools in one place"
            android:textSize="15sp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="7dp"
            app:strokeColor="@color/secondary"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/create_ad_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="switchToAddNew"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/qweqq"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/outline_create_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toStartOf="@id/qwerqq"
                        android:layout_toEndOf="@id/qweqq"
                        android:text="Create New Ad"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/qwerqq"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/baseline_keyboard_arrow_right_24" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="40dp"
                    android:background="#330E0E0E" />

                <RelativeLayout
                    android:id="@+id/view_edit_ads_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="switchToMyAds"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/qweqqq"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/outline_remove_red_eye_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toStartOf="@id/qwerqqq"
                        android:layout_toEndOf="@id/qweqqq"
                        android:text="View/Edit My Ads"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/qwerqqq"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/baseline_keyboard_arrow_right_24" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="40dp"
                    android:background="#330E0E0E" />

                <RelativeLayout
                    android:id="@+id/manage_account_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="switchToMyAccount"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/qwe"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/outline_account_circle_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toStartOf="@id/qwer"
                        android:layout_toEndOf="@id/qwe"
                        android:text="Manage account"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/qwer"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/baseline_keyboard_arrow_right_24" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="40dp"
                    android:background="#330E0E0E" />

                <RelativeLayout
                    android:id="@+id/browse_ads_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="switchToExploreAds"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/qweq"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/outline_feed_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toStartOf="@id/qwerq"
                        android:layout_toEndOf="@id/qweq"
                        android:text="Explore ads"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/qwerq"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/baseline_keyboard_arrow_right_24" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="40dp"
                    android:background="#330E0E0E" />

                <RelativeLayout
                    android:id="@+id/logout_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="logoutId"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/qweqqqq"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/outline_logout_24"
                        app:tint="@color/red" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toStartOf="@id/qwerqqqq"
                        android:layout_toEndOf="@id/qweqqqq"
                        android:text="Logout"
                        android:textColor="@color/red"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/qwerqqqq"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/baseline_keyboard_arrow_right_24" />

                </RelativeLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</RelativeLayout>
